<div id="altbgfixed">
  <div class="container my-5">
    <%= gravatar_for @user, size:200, class: "mb-4" %>
    <h1 class="display-4 text-center"><%= @user.username %>'s Profile</h1>
        
        

        <h3><%= @user.username %>'s Articles</h3>

        <% @articles.each do |article| %>
            <div class="card shadow mb-5 bg-white rounded">
              
              <div class="card-body">
                <h5 class="card-title"><%= link_to article.title, article_path(article), class:"text-dark"%></h5>
                <small><strong>Author:</strong> <em><%= article.user.username %> </em></small> <br />
                <p class="card-text"><%= truncate(article.description, length: 75) %></p>
                
                <%= link_to 'VIEW', article_path(article), class: "btn text-white mysand" %> 
                <%= link_to 'EDIT', edit_article_path(article), class: "btn btn-dark" %> &nbsp; 
                <%= link_to 'DELETE', article_path(article), method: :delete, data: {confirm: "Confirm you want to delate this article!"}, class:"btn text-white mysecondary" %>
              </div>
              <div class="card-footer text-white mydark text-center"><em>Created: <%= time_ago_in_words(article.created_at) %> ago.</em></div>
            </div>
            
            <% end %>







    </div>
</div>