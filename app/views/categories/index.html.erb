<div id="altbg">
  <div class="container-xl mt-4">
    <h1 class="display-4">Category List</h1>
    <br/>
    <div class="row">
      <% random_num = 1 %>
      <% @categories.each do |category| %>

      <div class="col-lg-6">
        <div class="card mb-3 card shadow bg-white rounded">
          <div class="row no-gutters">

            <div class="col-md-4">
              <%= image_tag("https://picsum.photos/175?random=#{random_num}") %>
            </div>

            <div class="col-md-8">
              <div class="card-body px-3">
                <h5 class="card-title">
                  <%= link_to category.name, category_path(category), class:"text-dark"%>
                </h5>
                <p class="card-text">Hard code category Description for now </p>
                <p class="card-text"><small class="text-muted">Article Count: <%= category.articles.count %><br /> Category Created: <%= time_ago_in_words(category.created_at) %> ago.</small></p>
              </div>
            </div>

          </div>
        </div>
      </div>
      <% random_num = random_num + 1 %> 
      <% end %>
    </div>

    <div class="pagination justify-content-center p-3 mb-3">
      <%= will_paginate @categories, :container => false %>
    </div>

  </div>
</div>