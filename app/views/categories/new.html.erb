<div id="altbg">
    <div class="container my-5">
        <h1 class="display-4">Create New Category</h1>
        <br/>

        <div class="row justify-content-center">
  <div class="col-10">
  <%= render 'shared/errormsg', objer: @category %>
    <%= form_with(model: @category, class: "shadow mb-4 p-5 bg-white rounded", local: true) do |form| %>
      <div class="form-group row">
        <%= form.label :name, "Category Name", class: "col-2 col-form-label" %>
        <div class="col-10">
        <%= form.text_field :name, class: "form-control shadow-sm mb-4 p-3 bg-white rounded", placeholder: "Enter a category name" %>
        </div>
      </div>
    
      
      <div class="form-group row justify-content-end"> 
          <%= form.submit class: "btn text-white mysecondary btn-lg" %>
      </div>

      <% end %>
  </div>
</div>

    
        
</div>