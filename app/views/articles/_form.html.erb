<div class="row justify-content-center">
  <div class="col-10">
  <%= render 'shared/errormsg', objer: @article %>
    <%= form_with(model: @article, class: "shadow mb-4 p-5 bg-white rounded", local: true) do |form| %>
      <div class="form-group row">
        <%= form.label :title, class: "col-2 col-form-label" %>
        <div class="col-10">
        <%= form.text_field :title, class: "form-control shadow-sm mb-4 p-3 bg-white rounded" %>
        </div>
      </div>
    
      <div class="form-group row">
        <%= form.label :description, class: "col-2 col-form-label" %>
        <div class="col-10">
        <%= form.text_area :description, rows: 10, class: "form-control shadow-sm mb-4 p-3 bg-white rounded" %>
        </div>
      </div>
      <div class="form-group row mb-0">
        <%= form.label :category, class: "col-2 col-form-label" %>
        <div class="col-10">
        <%= form.collection_select(:category_ids, Category.all, :id, :name,
        { prompt: "<< -- Optional Category Selection -- >>"},{ multiple: true, size: 4, class: "custom-select mb-3 shadow-sm rounded" }) %>
        <hr />
        </div>
      </div>

      <div class="form-group row justify-content-end"> 
          <%= form.submit class: "btn text-white mysecondary btn-lg" %>
      </div>

      <% end %>
  </div>
</div>