<div class="container mt-4">
<h1 class="display-4">List of Articles</h1>
<br/>
<% @articles.each do |article| %>
<div class="card shadow mb-5 bg-white rounded">
  <h5 class="card-header text-white mysecondary">CATEGORY NAME</h5>
  <div class="card-body">
    <h5 class="card-title"><%= link_to article.title, article_path(article), class:"text-dark"%></h5>
    <small><strong>Author:</strong> <em><%= article.user.username %> </em></small> <br />
    <p class="card-text"><%= truncate(article.description, length: 75) %></p>
    
    <%= link_to 'VIEW', article_path(article), class: "btn text-white mysecondary" %> 
    <%= link_to 'EDIT', edit_article_path(article), class: "btn btn-dark" %> &nbsp; 
    <%= link_to 'DELETE', article_path(article), method: :delete, data: {confirm: "Confirm you want to delate this article!"}, class:"btn btn-danger" %>
  </div>
  <div class="card-footer text-white mydark text-center"><em>Created: <%= time_ago_in_words(article.created_at) %> ago.</em></div>
</div>

<% end %>


  
  


<p><%= link_to '<< Create New Article >>', new_article_path, class: "mydarktext" %></p>
</div>