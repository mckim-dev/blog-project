<% flash.each do |k, message| %>  
  <% if k == "notice" %>
    <div class="alert alert-success alert-dismissible fade show shadow-sm mt-4 p-3 rounded" role="alert">
      <strong><%= message %></strong>
  <% else %>
    <div class="alert alert-danger alert-dismissible fade show shadow-sm mt-4 p-3 rounded" role="alert">
      <strong><%= message %></strong>
  <% end %>  
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>

    </div>
  <% end %>